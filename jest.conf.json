{
  "preset": "jest-preset-angular",
  "setupFilesAfterEnv": [
    "<rootDir>/tools/jest/jest-setup.ts"
  ],
  "collectCoverage": true,
  "collectCoverageFrom" : [
    "src/components/**/*.ts"
  ],
  "coveragePathIgnorePatterns":[
    "<rootDir>/node_modules/",
    "<rootDir>/demo/",
    "<rootDir>/integration/",
    "<rootDir>/dist/",
    "<rootDir>/src/*.d.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov"],
  "moduleFileExtensions":["js", "ts", "json", "jsx", "node"],
  "modulePathIgnorePatterns":[
    "<rootDir>/demo/",
    "<rootDir>/docs/",
    "<rootDir>/dist/",
    "<rootDir>/integration/",
    "<rootDir>/node_modules/",
    "<rootDir>/e2e/",
    "<rootDir>/tools/"
  ]
}
