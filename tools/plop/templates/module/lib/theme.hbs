@import "../core/styles/theming/theming";

@mixin _tl-{{lowerCase moduleName}}-theme-schema( $theme, $action ){
  //SKELETON COMPONENT HERE
}

@mixin tl-{{lowerCase moduleName}}-theme( $theme ) {

  .tl-{{lowerCase moduleName}}{
    &.basic {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'basic')
    }

    &.primary {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'primary')
    }

    &.success {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'success')
    }

    &.danger {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'danger')
    }

    &.warning {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'warning')
    }

    &.information {
      @include _tl-{{lowerCase moduleName}}-theme-schema($theme, 'information')
    }
  }
}
